<h1>Eat-Da-Burger!</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
          <h3>Fresh Burgers</h3>
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col-sm-6">
          <h3>Devoured Burgers</h3>
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <h3>Click on a burger to devour it!</h3>
        </div>
    </div>
  </div>
</main>

<h2>Add A Burger Option</h2>

<div class="row" id="submitRow">
  <div class="col-sm-12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="New Delicious Burger">
      <button type="submit" id="addBurgerButton" class="btn btn-lg">Add The Burger</button>
    </form>
  </div>
</div>